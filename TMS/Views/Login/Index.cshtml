@model TMS.Models.LoginPage
@{
    ViewBag.Title = "Home Page";
}
<head>
    <style>
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
</head>

<body>

    <div class="container" style="margin-left:25%">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
        <fieldset>
            <h1>Login</h1>
           <br /><br /><br />
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <div class="login">
                            @Html.LabelFor(Model => Model.UserName, new { htmlAttributes = new { @class = "control-label" } })

                        </div>
                    </div>
                    <div class="col-md-4">

                        @Html.EditorFor(Model => Model.UserName, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Your Email" } })
                        @Html.ValidationMessageFor(Model => Model.UserName)

                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <div class="login">
                            @Html.LabelFor(Model => Model.Password)
                        </div>
                    </div>
                    <div class="col-md-4">

                        @Html.EditorFor(Model => Model.Password, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Your Password"  } })
                        @Html.ValidationMessageFor(Model => Model.Password)

                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-3">
                    <p>
                        <input type="submit" value=" Login" class="btn btn-primary btn-md"style="margin-left:11px; width:70px">
                    </p>
                </div>
            </div>

           
        </fieldset>


        }
        

    </div>
</body>


