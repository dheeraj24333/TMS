<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 19px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
            padding: 16px;
        }

        .main12 {
            transition: margin-left .5s;
            padding: 16px;
        }

        .sidenavmenu {
            color: black;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Scripts/UserImages/logo2.png" class="navbar-brand" style="height:70px;width:80px;margin-left:-80%;background-color:#F8F8F8;" />
                <span style="font-size:30px;cursor:pointer;margin-top:15px;" onclick="openNav()" class="navbar-brand">&#9776;</span>


            </div>

        </div>
    </div>
    <div id="mySidenav" class="sidenav" style="margin-top:5%;background-color:#00AFB8;">
        <a href="javascript:void(0)" class="closebtn sidenavmenu" onclick="closeNav()" style="margin-bottom:10%;"><label class="sidenavmenu" >&times;</label></a>
        
        &nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;<i class="fa fa-dashboard sidenavmenu" style="margin-top: 13%; font-size:24px;"></i> &nbsp;  @Html.ActionLink("Dashboard ", "Dashboard", "Login", new { @style = "text-transform:capitalize;color:black;margin-left: 17%;margin-top: -32px;" })<br />
        &nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;<i class="fa fa-clone sidenavmenu" style="font-size:24px;"></i> &nbsp;  @Html.ActionLink("Available Cources ", "routetodash", "Login", new { @style = "text-transform:capitalize;color:black;margin-left: 17%;margin-top: -32px;" })<br />
        &nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;<i class="fa fa-drivers-license-o sidenavmenu" style="font-size:24px;"></i> &nbsp;  @Html.ActionLink("Profile ", "Profiles", "Login", new { @style = "text-transform:capitalize;color:black;margin-left: 17%;margin-top: -32px;" })<br />
        &nbsp;&nbsp; &nbsp;&nbsp;&nbsp;  &nbsp;<span> <i class="fa fa-fw fa-user sidenavmenu" style="font-size:24px;"></i></span> @Html.ActionLink("My Courses ", "Profile", "Login", new { @style = "text-transform:capitalize;color:black;margin-left: 17%;margin-top: -32px;" })<br />
        &nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;<i class="fa fa-fw fa-sign-out sidenavmenu" style="font-size:24px;"></i> @Html.ActionLink("Logout ", "Logout", "Login", new { @style = "text-transform:capitalize;color:black;margin-left: 17%;margin-top: -32px;" })<br />
    </div>
    <div class="container body-content" id="main" style="margin-top:5%;">

        @RenderBody()
        <div class="row">
            <div class="col-md-12">
                <div style="margin-top:14%;">
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - CommunityBrands</p>
                    </footer>
                </div>
            </div>
        </div>
    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    function openNav() {
  document.getElementById("mySidenav").style.width = "250px";
  document.getElementById("main").style.marginLeft = "250px";
    }
    function closeNav() {
  document.getElementById("mySidenav").style.width = "0";
  document.getElementById("main").style.marginLeft= "100px";
}
</script>
